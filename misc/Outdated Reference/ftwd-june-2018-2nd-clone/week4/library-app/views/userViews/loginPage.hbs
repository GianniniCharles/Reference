<h1>Login</h1>


<form action="/login" method="post">

    <label>Username</label>
    <input type="text" name="theUsername">

    <label>Password</label>
    <input type="password" name="thePassword">


    <button>Submit</button>


</form>

{{#if errorMessage }}
    <div>{{ errorMessage }}</div>
{{/if}}